<div id="special-abilities">
  <div class="info-cell">
    <h2>Special Abilities
      <div class="xp-row">
        <%- 8.times do |i| %>
          <% checked = i + 1<= player_character.playbook_xp %>
          <% value = checked ? i :  i + 1 %>
          <%= render 'shared/input_box',
                        field: :playbook_xp,
                        model: player_character,
                        value:,
                        checked:,
                        classes: "xp"
                      %>
        <% end %>
      </div>
    </h2>
  </div>
  <% player_character.special_abilities.active.each do |ability|%>
    <div class="info-cell">
      <h2>
        <%= ability.name %>
        <div class="ability-boxes">
          <% ability.cost.times do |i| %>
            <% checked = i + 1<= ability.points %>
            <% value = checked ? i :  i + 1 %>
            <%= render 'shared/input_box',
                        field: :points,
                        model: [player_character, ability],
                        value:,
                        checked:,
                        classes: "ability-box"
                      %>
          <% end %>
        </div>
      </h2>
      <p><%= ability.description %></p>
    </div>
  <%end %>
  <div class="info-cell inverted">
    <h2 class="inverted"> inactive Special Abilities </h2>
  </div>
  <div class="inactive">
    <% player_character.special_abilities.inactive.each do |ability|%>
      <div class="info-cell">
        <h2 class="inverted">
          <%= ability.name %>
          <div class="ability-boxes">
            <% ability.cost.times do |i| %>
              <% checked = i + 1<= ability.points %>
              <% value = checked ? i :  i + 1 %>
              <%= render 'shared/input_box',
                        field: :points,
                        model: [player_character, ability],
                        value:,
                        checked:,
                        classes: "ability-box"
                      %>
            <% end %>
          </div>
        </h2>
        <p><%= ability.description %></p>
      </div>
    <%end %>
  </div>
</div>
