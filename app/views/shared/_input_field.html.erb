<% model ||= [@game, player_character] %>
<% label ||= nil %>
<% classes ||= "" %>
<% select_field ||= nil %>
<% disabled ||= false %>
<%= form_with(model: model, class: 'input') do |form| %>
  <%= form.text_field field, disabled:, onchange: 'this.form.requestSubmit()', class: "field #{classes}" %>
  <% if select_field || label %>
    <div class="lower">
      <%= (form.label field, label, class: 'label') if label %>
      <% if select_field %>
        <%= form.select select_field, collection, {}, onchange: 'this.form.requestSubmit()', class: 'inner-select'  %>
      <% end %>
    </div>
  <% end %>
<% end %>
