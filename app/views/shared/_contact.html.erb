<div class="contact">
  <%= render CustomCheckboxComponent.new(model: contact, field: :friend, checked: contact.friend, classes: 'to-friend')%>
  <div class="contact-column">
    <span class="contact-name"><%= contact.name %></span>
    <div class="contact-job">The <%= contact.job.capitalize %></div>
  </div>
  <%= render CustomCheckboxComponent.new(model: contact, field: :rival, checked: contact.rival, classes: 'to-rival')%>
</div>
