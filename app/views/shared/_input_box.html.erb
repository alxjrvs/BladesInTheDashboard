<% onchange ||= '' %>
<% checked ||= false %>
<% value ||= !checked %>
<% activeTag ||= 'X' %>
<% tag = checked ? activeTag : ' ' %>
<% classes ||= ''%>
<% hoverText ||= nil %>
<% disabled ||= false %>
<%= form_with(model:, class: "custom-checkbox-container" ) do |form| %>
  <%= form.check_box field, class: "custom-checkbox", checked:, disabled:, onchange: "this.form.requestSubmit()" %>
  <%= form.hidden_field field, value: %>
<% end %>
