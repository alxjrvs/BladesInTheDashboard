<% onchange ||= '' %>
<% checked ||= false %>
<% value ||= !checked %>
<% activeTag ||= 'X' %>
<% tag = checked ? activeTag : ' ' %>
<% classes ||= ''%>
<% hoverText ||= nil %>
<% disabled ||= false %>
<%= form_with(model:) do |form| %>
  <%= form.check_box field, class: "input-checkbox", checked:, disabled:, onchange: "this.form.requestSubmit()" %>
  <%= form.hidden_field field, value:  %>
  <div class="checkbox <%= classes %>"></div>
<% end %>
